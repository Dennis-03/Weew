<%- include('partials/navbar') %>
<div class="container" style="margin-top: 75px;">
  <h1>News</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Heading</th>
        <th>Image Source</th>
        <th>Description</th>
        <th>Type</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% news.forEach((news)=>{ %>
      <tr>
        <th><%= news.newsHeader %></th>
        <td>
          <img src="/<%= news.imageSrc %>" width="180" />
        </td>
        <td><%= news.description %></td>
        <td class="text-capitalize"><%= news.type %></td>
        <td>
          <a href="/admin/news/delete/<%= news.id %> "
            ><button class="btn btn-danger">Delete</button></a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <button
    class="btn btn-primary fa fa-plus"
    style="
      position: fixed;
      bottom: 50px;
      right: 50px;
      border-radius: 50%;
      font-size: 35px;
      width: 60px;
      height: 60px;
    "
    data-toggle="modal"
    data-target="#exampleModal"
  ></button>
  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New News</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form
            action="/admin/news"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label class="col-form-label">Header</label>
              <input
                type="text"
                class="form-control"
                id="recipient-name"
                name="newsHeader"
                required
              />
              <label class="col-form-label">
                Description
              </label>
              <textarea
                class="form-control"
                id="message-text"
                name="description"
                required
              ></textarea>
              <label class="col-form-label">
                Type
              </label>
              <div>
                <label class="radio-inline">
                  <input
                    type="radio"
                    name="type"
                    value="global"
                    required
                  />Global
                </label>
                <label class="radio-inline">
                  <input type="radio" name="type" value="local" />Local
                </label>
              </div>
              <label class="col-form-label">
                Image
              </label>
              <div>
                <input type="file" name="imageSrc" id="imageSrc" required />
              </div>
              <hr />
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
